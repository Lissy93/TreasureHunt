<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:orientation="vertical"
    android:weightSum="1"
    android:background = "@color/white"
    android:paddingTop="50dp"
    android:id="@+id/homeLayout">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to sign in"
        android:id="@+id/lblSignedInAs"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.17"
        android:textSize="@dimen/abc_text_size_headline_material" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnViewMyHunts"
        android:text="@string/title_section2"
        android:layout_gravity="center_horizontal"
        style="@style/Button"
        android:layout_weight="0.03"
        android:layout_marginTop="25dp"
        android:textSize="25sp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnViewAllHunts"
        android:text="@string/title_section3"
        android:layout_gravity="center_horizontal"
        style="@style/Button"
        android:layout_weight="0.03"
        android:layout_marginTop="25dp"
        android:textSize="25sp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnCreateHunt"
        android:text="@string/title_section4"
        android:layout_gravity="center_horizontal"
        style="@style/Button"
        android:layout_weight="0.03"
        android:layout_marginTop="25dp"
        android:textSize="25sp" />

</LinearLayout>
